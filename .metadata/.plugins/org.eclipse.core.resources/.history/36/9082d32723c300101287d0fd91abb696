    /**
     * Cambia entre tabs
     */
    private void cambiarTab(Button tabActivo, VBox seccionActiva) {
        // Ocultar todas las secciones
        seccionUsuarios.setVisible(false);
        seccionTorneos.setVisible(false);
        seccionPartidos.setVisible(false);
        seccionSolicitudes.setVisible(false);
        seccionInscripciones.setVisible(false);
        seccionReglas.setVisible(false);
        seccionHistorial.setVisible(false);

        // Mostrar la secci√≥n activa
        seccionActiva.setVisible(true);

        // Actualizar estilos de tabs
        btnTabUsuarios.getStyleClass().clear();
        btnTabTorneos.getStyleClass().clear();
        btnTabPartidos.getStyleClass().clear();
        btnTabSolicitudes.getStyleClass().clear();
        btnTabInscripciones.getStyleClass().clear();
        btnTabReglas.getStyleClass().clear();
        btnTabHistorial.getStyleClass().clear();

        btnTabUsuarios.getStyleClass().add("tab-btn-admin");
        btnTabTorneos.getStyleClass().add("tab-btn-admin");
        btnTabPartidos.getStyleClass().add("tab-btn-admin");
        btnTabSolicitudes.getStyleClass().add("tab-btn-admin");
        btnTabInscripciones.getStyleClass().add("tab-btn-admin");
        btnTabReglas.getStyleClass().add("tab-btn-admin");
        btnTabHistorial.getStyleClass().add("tab-btn-admin");

        tabActivo.getStyleClass().clear();
        tabActivo.getStyleClass().add("tab-btn-admin-active");
    }

    // ==================== GESTI√ìN DE USUARIOS ====================

    /**
     * Carga todos los usuarios del sistema
     */
    private void cargarUsuarios() {
        try {
            String urlString = "http://localhost:8083/usuarios";
            String response = hacerPeticionGET(urlString);
            
            if (response != null) {
                JSONArray arr = new JSONArray(response);
                listaUsuarios.clear();

                for (int i = 0; i < arr.length(); i++) {
                    JSONObject obj = arr.getJSONObject(i);
                    
                    Usuario usuario = new Usuario(
                        obj.optInt("idUsuario"),
                        obj.optString("nombre", "N/A"),
                        obj.optString("apellido", "N/A"),
                        obj.optString("correo", "N/A"),
                        obj.optString("rfc", "N/A"),
                        obj.optString("rol", "Jugador"),
                        obj.optString("deporte", "N/A"),
                        obj.optString("fechaRegistro", "N/A")
                    );
                    if(!usuario.rol.equals("Administrador"))
                    {
                    	listaUsuarios.add(usuario);
                    }
                    
                }
                
                System.out.println("‚úÖ Usuarios cargados: " + listaUsuarios.size());
            }
        } catch (Exception e) {
            e.printStackTrace();
            mostrarAlerta("Error al cargar usuarios: " + e.getMessage(), Alert.AlertType.ERROR);
        }
    }

    @FXML
    private void buscarUsuarios() {
        String busqueda = txtBuscarUsuario.getText().trim().toLowerCase();
        
        if (busqueda.isEmpty()) {
            cargarUsuarios();
            return;
        }

        ObservableList<Usuario> usuariosFiltrados = FXCollections.observableArrayList();
        
        for (Usuario usuario : listaUsuarios) {
            String nombre = usuario.getNombreCompleto().toLowerCase();
            String correo = usuario.getCorreo().toLowerCase();
            String rfc = usuario.getRfc() != null ? usuario.getRfc().toLowerCase() : "";
            
            if (nombre.contains(busqueda) || correo.contains(busqueda) || rfc.contains(busqueda)) {
                usuariosFiltrados.add(usuario);
            }
        }
        
        tablaUsuarios.setItems(usuariosFiltrados);
        
        if (usuariosFiltrados.isEmpty()) {
            mostrarAlerta("No se encontraron usuarios con el criterio: " + busqueda, 
                         Alert.AlertType.INFORMATION);
        }
    }

    @FXML
    private void crearUsuarioAdmin() {
        TextInputDialog dialogUsuario = new TextInputDialog();
        dialogUsuario.setTitle("Crear Usuario Administrador");
        dialogUsuario.setHeaderText("Ingresa el nombre de usuario");
        dialogUsuario.setContentText("Usuario:");

        dialogUsuario.showAndWait().ifPresent(usuario -> {
            if (usuario.trim().isEmpty()) {
                mostrarAlerta("El nombre de usuario no puede estar vac√≠o", Alert.AlertType.WARNING);
                return;
            }

            TextInputDialog dialogPassword = new TextInputDialog();
            dialogPassword.setTitle("Crear Usuario Administrador");
            dialogPassword.setHeaderText("Ingresa la contrase√±a");
            dialogPassword.setContentText("Contrase√±a:");

            dialogPassword.showAndWait().ifPresent(password -> {
                if (password.trim().isEmpty()) {
                    mostrarAlerta("La contrase√±a no puede estar vac√≠a", Alert.AlertType.WARNING);
                    return;
                }

                // TODO: Implementar creaci√≥n de usuario admin en el backend
                System.out.println("=== CREAR ADMIN ===");
                System.out.println("Usuario: " + usuario);
                System.out.println("Password: " + password);
                
                mostrarAlerta("‚úÖ Usuario administrador creado exitosamente", Alert.AlertType.INFORMATION);
                cargarUsuarios();
            });
        });
    }

    private void editarUsuario(Usuario usuario) {
        Alert alert = new Alert(Alert.AlertType.INFORMATION);
        alert.setTitle("Editar Usuario");
        alert.setHeaderText("Editar informaci√≥n de: " + usuario.getNombreCompleto());
        alert.setContentText("ID: " + usuario.getIdUsuario() + "\n" +
                           "Correo: " + usuario.getCorreo() + "\n" +
                           "RFC: " + usuario.getRfc() + "\n" +
                           "Rol: " + usuario.getRol());
        alert.showAndWait();
        
        // TODO: Implementar edici√≥n completa con formulario
    }

    private void eliminarUsuario(Usuario usuario) {
        Alert confirmacion = new Alert(Alert.AlertType.CONFIRMATION);
        confirmacion.setTitle("Confirmar Eliminaci√≥n");
        confirmacion.setHeaderText("¬øEliminar usuario?");
        confirmacion.setContentText("Usuario: " + usuario.getNombreCompleto() + "\n" +
                                   "Esta acci√≥n no se puede deshacer.");

        confirmacion.showAndWait().ifPresent(response -> {
            if (response == ButtonType.OK) {
                try {
                    // TODO: Implementar DELETE en el backend
                    System.out.println("Eliminando usuario ID: " + usuario.getIdUsuario());
                    
                    mostrarAlerta("‚úÖ Usuario eliminado exitosamente", Alert.AlertType.INFORMATION);
                    cargarUsuarios();
                    cargarEstadisticas();
                    
                } catch (Exception e) {
                    e.printStackTrace();
                    mostrarAlerta("Error al eliminar usuario: " + e.getMessage(), Alert.AlertType.ERROR);
                }
            }
        });
    }

    // ==================== GESTI√ìN DE TORNEOS ====================

    @FXML
    
    private void abrirCrearTorneo() {
        // Crear el di√°logo
        Dialog<ButtonType> dialog = new Dialog<>();
        dialog.setTitle("Crear Nuevo Torneo");
        dialog.setHeaderText("üèÜ Crear Nuevo Torneo");
        
        // Botones
        ButtonType btnCrear = new ButtonType("‚úÖ Crear", ButtonBar.ButtonData.OK_DONE);
        ButtonType btnCancelar = new ButtonType("‚ùå Cancelar", ButtonBar.ButtonData.CANCEL_CLOSE);
        dialog.getDialogPane().getButtonTypes().addAll(btnCrear, btnCancelar);
        
        // Crear formulario
        GridPane grid = new GridPane();
        grid.setHgap(15);
        grid.setVgap(15);
        grid.setPadding(new javafx.geometry.Insets(20, 20, 20, 20));
        
        // Campos del formulario
        TextField txtNombreTorneo = new TextField();
        txtNombreTorneo.setPromptText("Ej: Liga MX 2025");
        txtNombreTorneo.setPrefWidth(300);
        
        ComboBox<String> cmbDeporte = new ComboBox<>();
        cmbDeporte.getItems().addAll("F√∫tbol", "Baloncesto", "Voleibol", "Nataci√≥n", "Tenis");
        cmbDeporte.setPromptText("Selecciona un deporte");
        cmbDeporte.setPrefWidth(300);
        
        DatePicker dpFechaInicio = new DatePicker();
        dpFechaInicio.setPromptText("Fecha de inicio");
        dpFechaInicio.setPrefWidth(300);
        
        DatePicker dpFechaFin = new DatePicker();
        dpFechaFin.setPromptText("Fecha de fin");
        dpFechaFin.setPrefWidth(300);
        
        TextArea txtReglas = new TextArea();
        txtReglas.setPromptText("Describe las reglas del torneo...");
        txtReglas.setPrefHeight(100);
        txtReglas.setPrefWidth(300);
        txtReglas.setWrapText(true);
        
        // Agregar campos al grid
        grid.add(new Label("Nombre del Torneo:"), 0, 0);
        grid.add(txtNombreTorneo, 1, 0);
        
        grid.add(new Label("Deporte:"), 0, 1);
        grid.add(cmbDeporte, 1, 1);
        
        grid.add(new Label("Fecha de Inicio:"), 0, 2);
        grid.add(dpFechaInicio, 1, 2);
        
        grid.add(new Label("Fecha de Fin:"), 0, 3);
        grid.add(dpFechaFin, 1, 3);
        
        grid.add(new Label("Reglas:"), 0, 4);
        grid.add(txtReglas, 1, 4);
        
        dialog.getDialogPane().setContent(grid);
        
        // Estilo para los labels
        grid.getChildren().stream()
            .filter(node -> node instanceof Label)
            .forEach(node -> ((Label) node).setStyle("-fx-font-weight: bold;"));
        
        // Manejar el resultado
        dialog.showAndWait().ifPresent(response -> {
            if (response == btnCrear) {
                // Validar campos
                if (txtNombreTorneo.getText().trim().isEmpty()) {
                    mostrarAlerta("‚ö†Ô∏è El nombre del torneo es obligatorio", Alert.AlertType.WARNING);
                    return;
                }
                
                if (cmbDeporte.getValue() == null) {
                    mostrarAlerta("‚ö†Ô∏è Debes seleccionar un deporte", Alert.AlertType.WARNING);
                    return;
                }
                
                if (dpFechaInicio.getValue() == null) {
                    mostrarAlerta("‚ö†Ô∏è Debes seleccionar la fecha de inicio", Alert.AlertType.WARNING);
                    return;
                }
                
                if (dpFechaFin.getValue() == null) {
                    mostrarAlerta("‚ö†Ô∏è Debes seleccionar la fecha de fin", Alert.AlertType.WARNING);
                    return;
                }
                
                if (dpFechaFin.getValue().isBefore(dpFechaInicio.getValue())) {
                    mostrarAlerta("‚ö†Ô∏è La fecha de fin no puede ser anterior a la fecha de inicio", Alert.AlertType.WARNING);
                    return;
                }
                
                if (txtReglas.getText().trim().isEmpty()) {
                    mostrarAlerta("‚ö†Ô∏è Las reglas del torneo son obligatorias", Alert.AlertType.WARNING);
                    return;
                }
                
                // Crear torneo
                crearTorneoEnServidor(
                    txtNombreTorneo.getText().trim(),
                    cmbDeporte.getValue(),
                    dpFechaInicio.getValue(),
                    dpFechaFin.getValue(),
                    txtReglas.getText().trim()
                );
            }
        });
    }

    /**
     * Crea el torneo en el servidor
     */
    private void crearTorneoEnServidor(String nombre, String deporte, LocalDate fechaInicio, LocalDate fechaFin, String reglas) {
        try {
            // Obtener ID del deporte
            int idDeporte = obtenerIdDeporte(deporte);
            
            // Crear JSON
            JSONObject torneo = new JSONObject();
            torneo.put("idDeporte", idDeporte);
            torneo.put("nombreYClasificacion", nombre);
            torneo.put("reglasTorneo", reglas);
            torneo.put("fechaInicio", fechaInicio.toString());
            torneo.put("fechaFin", fechaFin.toString());
            
            // Enviar petici√≥n POST
            String response = enviarPeticionPOST("http://localhost:8080/torneos", torneo.toString());
            
            if (response != null) {
                mostrarAlerta("‚úÖ Torneo creado exitosamente\n\nNombre: " + nombre + "\nDeporte: " + deporte, 
                             Alert.AlertType.INFORMATION);
                // TODO: Recargar tabla de torneos aqu√≠
            } else {
                mostrarAlerta("‚ùå Error al crear el torneo. Verifica que el servidor est√© activo.", 
                             Alert.AlertType.ERROR);
            }
            
        } catch (Exception e) {
            e.printStackTrace();
            mostrarAlerta("‚ùå Error: " + e.getMessage(), Alert.AlertType.ERROR);
        }
    }

    /**
     * Obtiene el ID del deporte por su nombre
     */
    private int obtenerIdDeporte(String nombreDeporte) {
        switch (nombreDeporte) {
            case "F√∫tbol": return 1;
            case "Baloncesto": return 2;
            case "Voleibol": return 3;
            case "Nataci√≥n": return 4;
            case "Tenis": return 5;
            default: return 1;
        }
    }

    /**
     * Env√≠a una petici√≥n POST
     */
    private String enviarPeticionPOST(String urlString, String jsonBody) {
        try {
            URL url = new URL(urlString);
            HttpURLConnection con = (HttpURLConnection) url.openConnection();
            con.setRequestMethod("POST");
            con.setRequestProperty("Content-Type", "application/json");
            con.setDoOutput(true);

            // Enviar JSON
            try (java.io.OutputStream os = con.getOutputStream()) {
                byte[] input = jsonBody.getBytes(StandardCharsets.UTF_8);
                os.write(input, 0, input.length);
            }

            int responseCode = con.getResponseCode();
            System.out.println("Response Code: " + responseCode);
            
            if (responseCode == 200 || responseCode == 201) {
                return "OK";
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
        return null;
    }

